<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Escolha entre seus seguidores, monte seu time e veja a possibilidade de vitoria"
        android:id="@+id/simulation_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:autoText="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time 1"
        android:id="@+id/time1"
        android:layout_below="@+id/simulation_title"
        android:layout_alignParentStart="true"
        android:layout_marginTop="62dp"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimary"
        android:textColor="@color/textColorWhite"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time 2"
        android:id="@+id/time2"
        android:layout_below="@+id/time1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimary"
        android:textColor="@color/textColorWhite"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simular"
        android:id="@+id/gerarProb"
        android:background="@color/colorPrimary"
        android:textColor="@color/textColorWhite"
        android:layout_below="@+id/time2"
        android:layout_centerHorizontal="true" />

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:layout_marginTop="74dp"
        android:layout_below="@+id/gerarProb"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent" android:layout_below="@+id/gerarProb"
            android:layout_height="match_parent">

                <com.github.mikephil.charting.charts.RadarChart
                    android:id="@+id/radar_chart_simulacao"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />


        </RelativeLayout>

    </ScrollView>
</RelativeLayout>